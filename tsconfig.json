{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "react-jsx",                      // ✅ WAJIB untuk file .tsx
    "esModuleInterop": true,                 // ✅ Untuk dukung import 'path'
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["node"]                        // ✅ Agar __dirname & 'path' dikenali
  },
  "include": ["src"]
}
